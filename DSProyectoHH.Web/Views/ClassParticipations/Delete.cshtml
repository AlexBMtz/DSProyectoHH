@model DSProyectoHH.Web.Data.Entities.ClassParticipation

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Está seguro que quieres eliminar esta participación?</h3>
<div>
    <h4>Participación en Clase</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Listening)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Listening)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Reading)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Reading)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpokenInteraction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpokenInteraction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SpokenProduction)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SpokenProduction)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fluency)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fluency)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Regresar a la lista</a>
    </form>
</div>
