@model DSProyectoHH.Web.Data.Entities.Schedule

@{
    ViewData["Title"] = "Crear";
}

<link rel="stylesheet" href="~/css/style-icon.css" />

<h1>Crear</h1>

<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartingHour" class="control-label"></label>
                <input asp-for="StartingHour" class="form-control" type="time"/>
                <span asp-validation-for="StartingHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndingHour" class="control-label"></label>
                <input asp-for="EndingHour" class="form-control" type="time" />
                <span asp-validation-for="EndingHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-success" /> |
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <span class="icon-undo2"></span>  Regresar a la Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
