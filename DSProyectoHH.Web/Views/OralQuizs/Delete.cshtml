@model DSProyectoHH.Web.Data.Entities.OralQuiz

@{
    ViewData["Title"] = "Eliminar";
}

<link href="~/css/estilo-home.css" type="text/css" rel="stylesheet" />
<h1>Eliminar</h1>

<h3>¿Está seguro que quieres eliminar este examen?</h3>
<div>
    <h4>Examen Oral</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Communication)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Communication)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Grammar)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Grammar)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Vocabulary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Vocabulary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Conversations)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Conversations)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fluency)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fluency)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">Regresar a la lista</a>
    </form>
</div>
