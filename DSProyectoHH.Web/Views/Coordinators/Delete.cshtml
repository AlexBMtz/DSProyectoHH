@model DSProyectoHH.Web.Data.Entities.Coordinator

@{
    ViewData["Title"] = "Eliminar coordinador";
}

<link rel="stylesheet" href="~/css/style-icon.css" />
<link href="~/css/estilo-home.css" type="text/css" rel="stylesheet" />

<h1>Eliminar coordinador</h1>

<h3>¿Está seguro que quieres eliminar al coordinador?</h3>
<div>
    <h4>Coordinador</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CoordinatorId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoordinatorId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RFC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RFC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HiringDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HiringDate)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" style="width:300px; height:auto;" />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">
            <span class="icon-undo2"></span>  Regresar a la lista
        </a>
    </form>
</div>
