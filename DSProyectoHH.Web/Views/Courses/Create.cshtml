@model IEnumerable<DSProyectoHH.Web.Data.Entities.CourseDetailTemp>
@{
    ViewData["Title"] = "Nueva Lista de Alumnos";
}

<h1>Nueva Lista</h1>
<p>
    <a asp-action="AddStudent" class="btn btn-dark">
        <span class="icon-plus"></span>  Agregar Alumno
    </a> 
    <a asp-action="SaveList" class="btn btn-dark">
        <span class="icon-floppy-disk"></span>  Guardar Lista
        </a> |
    <a asp-action="Index" class="btn btn-outline-secondary">
        <span class="icon-undo2"></span>  Regresar a la Lista
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student.StudentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Student.User.FullName)
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.StudentId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Student.User.FullName)
            </td>
            <td>
                <a asp-action="DeleteStudent" asp-route-id="@item.Id" class="btn btn-outline-danger">
                    <span class="icon-cancel-circle"></span>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>