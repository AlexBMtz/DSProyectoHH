@model DSProyectoHH.Web.Data.Entities.Course

@{
    ViewData["Title"] = "Eliminar curso";
}

<link rel="stylesheet" href="~/css/style-icon.css" />
<link href="~/css/estilo-home.css" type="text/css" rel="stylesheet" />

<h1>Eliminar curso</h1>

<h3>¿Está seguro que quieres eliminar al curso?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Frequency.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Frequency.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.StartingHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.StartingHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Schedule.EndingHour)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Schedule.EndingHour)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CourseType.CourseTypeName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseType.CourseTypeName)
        </dd>
        <dt class="col-sm-2">
            <label>Nombre del Teacher</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Teacher.User.FullName)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
        </dd>
       
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Eliminar" class="btn btn-outline-danger" /> |
        <a asp-action="Index" class="btn btn-outline-secondary">
            <span class="icon-undo2"></span>  Regresar a la lista
        </a>
    </form>
</div>
