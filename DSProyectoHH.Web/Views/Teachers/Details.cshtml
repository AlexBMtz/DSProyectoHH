@model DSProyectoHH.Web.Data.Entities.Teacher

@{
    ViewData["Title"] = "Detalles del profesor";
}

<link rel="stylesheet" href="~/css/style-icon.css" />

<h1>Detalles del profesor</h1>

<div>
    <h4>Profesor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TeacherId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TeacherId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.FullName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.FullName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.PhoneNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.PhoneNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RFC)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RFC)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.HiringDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.HiringDate)
        </dd>
        <dt class="col-sm-2">
        </dt>
        <dd class="col-sm-10">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Url.Content(Model.ImageUrl)" style="width:300px; height:auto;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
        <span class="icon-pencil"></span>  Editar
    </a> |
    <a asp-action="Index" class="btn btn-outline-secondary">
        <span class="icon-undo2"></span>  Regresar a la lista
    </a>
</div>
